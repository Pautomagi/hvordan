{
  "name": "hvordan",
  "version": "1.0.0",
  "description": "Base gulp setup with foundation.",
  "main": "gulpfile.js",
  "repository": {
    "url": "https://bitbucket.org/pautomagi/hvordan.git",
    "type": "git"
  },
  "private": true,
  "deploy": {
    "staging": {
      "hostname": "skilpadde",
      "username": "root",
      "destination": "/var/www/skilpadde",
      "port": 2248
    },
    "production": {
      "hostname": "",
      "username": "",
      "destination": "",
      "port": 22
    }
  },
  "paths": {
    "src": {
      "base": "./src/",
      "js": "./assets/js/",
      "img": "./assets/img/",
      "svg": "./assets/img/svg",
      "scss": "./assets/scss/"
    },
    "dist": {
      "base": "./dist/",
      "css": "./dist/assets/css/",
      "js": "./dist/assets/js/",
      "img": "./dist/assets/img/",
      "svg": "./dist/assets/img/svg"
    },
    "scss": [
      "node_modules/foundation-sites/scss",
      "node_modules/motion-ui/src",
      "node_modules/luxbar/scss"
    ]
  },
  "vars": {
    "scssName": "app.scss",
    "cssName": "app.css"
  },
  "author": "Ulrik Hovstad <ulrik@innoventi.no>",
  "license": "MIT",
  "devDependencies": {
    "browser-sync": "^2.18.6",
    "foundation-sites": "^6.3.0",
    "gulp": "^3.9.1",
    "gulp-autoprefixer": "^3.1.1",
    "gulp-concat": "^2.6.1",
    "gulp-jshint": "^2.0.4",
    "gulp-load-plugins": "^1.4.0",
    "gulp-notify": "^2.2.0",
    "gulp-plumber": "^1.1.0",
    "gulp-rename": "^1.2.2",
    "gulp-sass": "^3.1.0",
    "gulp-size": "^2.1.0",
    "gulp-svgo": "^1.0.3",
    "gulp-twig": "^0.7.0",
    "gulp-uglify": "^2.0.0",
    "gulp-util": "^3.0.8",
    "jshint": "^2.9.4",
    "jshint-stylish": "^2.2.1",
    "motion-ui": "^1.2.2"
  },
  "dependencies": {
    "gulp-rsync": "^0.0.7",
    "luxbar": "^0.3.2",
    "minimist": "^1.2.0"
  }
}
